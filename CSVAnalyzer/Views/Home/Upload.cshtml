@model FileUploadVM
@{
    ViewBag.Title = "Upload CSV File";
}

<h3>Upload a CSV file to Analyze</h3>

<form enctype="multipart/form-data" asp-controller="home" asp-action="upload" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="CsvFile" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="CsvFile" class="form-control custom-file-input" placeholder="Email">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>